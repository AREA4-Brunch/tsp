{
    "configurations": [
        {
            "name": "Debug k_opt.exe with args",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/k_opt/main.exe",
            "args": [
                "classical",
                "3_opt",
                "263",
                "problems/263.txt",
                "results/k_opt_funky/histories",
                "5",
                "500",
                "300",
                "shp",
                "1",
                "--no-history"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/k_opt",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
            , "preLaunchTask": "Build k_opt/main.cpp (C++20 static)"
        }
    ]
}